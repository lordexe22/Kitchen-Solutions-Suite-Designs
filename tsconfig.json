{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["server/**/*.ts", "client/**/*.ts", "jest.config.ts"]
}
